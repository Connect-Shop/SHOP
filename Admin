        const WEB_APP_URL = 'https://script.google.com/macros/s/AKfycbzu3FxBsFdKCkJ2M9P-qM5Q1FivDECG2b1LXANNfE4KBfJJog6EdiNKNCzkO4VH7tRu/exec'; // วาง URL Web App เดียวกันกับหน้า index

        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Inter', 'system-ui', 'sans-serif'] },
